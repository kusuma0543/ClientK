<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.twotr.twotr.tutorfiles.Profile_Edit_Personal"
    tools:showIn="@layout/activity_profile__edit__personal">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_margin="25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginLeft="240dp"
            android:elevation="10dp"
            app:srcCompat="@drawable/ic_create_black_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_profileedit"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/profile_image_tutor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="First Name"
                android:textColor="@android:color/black"
                android:textSize="16sp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <EditText
                android:layout_width="304dp"
                android:layout_height="55dp"
                android:background="@drawable/edittext_unselected"
                android:ems="10"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat"
                android:hint="First Name"

                android:inputType="textPersonName"
                android:padding="10dp"
                android:singleLine="true"
                android:textColorLink="@color/colorAccent"
              />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Middle Name"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
            <EditText
                android:layout_width="304dp"
                android:layout_height="55dp"
                android:background="@drawable/edittext_unselected"
                android:ems="10"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat"
                android:hint="Middle Name"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:singleLine="true"
                android:textColorLink="@color/colorAccent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Last Name"

                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
            <EditText
                android:layout_width="304dp"
                android:layout_height="55dp"
                android:background="@drawable/edittext_unselected"
                android:ems="10"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:singleLine="true"
                android:textColorLink="@color/colorAccent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Date of Birth"
                android:layout_marginTop="10dp"



                android:textColor="@android:color/black"
                android:textSize="16sp" />
            <EditText
                android:layout_width="304dp"
                android:layout_height="55dp"
                android:background="@drawable/edittext_unselected"
                android:ems="10"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat"
                android:hint="27/03/1996"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:singleLine="true"
                android:textColorLink="@color/colorAccent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Mobile Number"


                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:weightSum="2"
              android:orientation="horizontal">
              <EditText
                  android:layout_width="60dp"
                  android:layout_height="55dp"
                  android:background="@drawable/edittext_unselected"
                  android:ems="2"
                  android:layout_marginTop="5dp"
                  android:fontFamily="@font/montserrat"
                  android:hint="+01"
                  android:inputType="textPersonName"
                  android:padding="10dp"
                  android:singleLine="true"
                  android:layout_marginRight="10dp"
                  android:textColorLink="@color/colorAccent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"/>

              <EditText
                  android:layout_width="230dp"
                  android:layout_height="55dp"
                  android:background="@drawable/edittext_unselected"
                  android:ems="10"
                  android:layout_marginTop="5dp"
                  android:fontFamily="@font/montserrat"
                  android:hint="8856464564"
                  android:layout_weight="0.2"
                  android:inputType="textPersonName"
                  android:padding="10dp"
                  android:singleLine="true"
                  android:textColorLink="@color/colorAccent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"/>
          </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Gender"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"


                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
                <Spinner
                    android:id="@+id/spinner_gender"
                    android:background="@drawable/edittext_unselected"

                    android:entries="@array/spinner_item"
                    android:layout_width="304dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                   />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Time Zone "

                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
            <Spinner
                android:id="@+id/spinner_timezone"
                android:background="@drawable/edittext_unselected"

                android:entries="@array/spinner_item"
                android:layout_width="304dp"
                android:layout_height="55dp"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Address"

                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
            <EditText
                android:layout_width="304dp"
                android:layout_height="55dp"
                android:background="@drawable/edittext_unselected"
                android:ems="10"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat"
                android:hint="Address"

                android:padding="10dp"
                android:singleLine="true"
                android:textColorLink="@color/colorAccent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="City"

                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
            <EditText
                android:layout_width="304dp"
                android:layout_height="55dp"
                android:background="@drawable/edittext_unselected"
                android:ems="10"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat"
                android:hint="Chennai"
                android:padding="10dp"
                android:singleLine="true"
                android:textColorLink="@color/colorAccent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Zip Code"


                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
            <EditText
                android:layout_width="304dp"
                android:layout_height="55dp"
                android:background="@drawable/edittext_unselected"
                android:ems="10"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat"
                android:hint="600087"
                android:padding="10dp"
                android:singleLine="true"
                android:textColorLink="@color/colorAccent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="Save and Continue"
                android:textColor="@color/colorwhite"
                android:textAllCaps="false"
                />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
</RelativeLayout>
