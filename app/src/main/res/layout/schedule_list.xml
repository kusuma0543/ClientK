<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="3dp"
   android:padding="2dp"
        android:layout_margin="3dp"
        android:layout_height="90dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"

            android:layout_height="match_parent">

            <TextView
                android:id="@+id/sub_name_sched"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/imageView3"
                android:layout_alignParentStart="true"
                android:layout_marginStart="11dp"
                android:padding="5dp"
                android:text="Subject Name"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/new_button_sched_but"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
               android:background="@drawable/ic_keyboard_arrow_right_black_24dp" />

            <TextView
                android:id="@+id/group_one_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/sub_name_sched"
                android:layout_alignBottom="@+id/sub_name_sched"
                android:layout_toEndOf="@+id/sub_name_sched"
                android:text="(1 to 1)" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/new_button_sched_but"
                android:layout_alignStart="@+id/sub_name_sched"
                app:srcCompat="@drawable/ic_access_time_black_24dp" />

            <TextView
                android:id="@+id/hours_sched"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView3"
                android:layout_below="@+id/sub_name_sched"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/imageView3"
                android:gravity="center"
                android:text="2 Hours  - " />

            <TextView
                android:id="@+id/time_sched"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignBottom="@+id/hours_sched"
                android:layout_below="@+id/sub_name_sched"
                android:layout_toEndOf="@+id/hours_sched"
                android:text="2:30 | " />

            <TextView
                android:id="@+id/month_day_sched"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:layout_alignBottom="@+id/time_sched"
                android:layout_alignTop="@+id/time_sched"
                android:layout_toEndOf="@+id/time_sched"
                android:text="Nov 28" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>