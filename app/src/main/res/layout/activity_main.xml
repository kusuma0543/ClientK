<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rel_layout"
    xmlns:whilu="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.twotr.twotr.MainActivity"
    >


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/twotr_main" />

    <Button
        android:id="@+id/button"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:background="@color/buttonColorPrimary"
        android:fontFamily="@font/montserrat"
        android:text="Sign In"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:textColor="#fff" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_above="@+id/textView"
        android:layout_alignEnd="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginBottom="33dp"
        android:textSize="14sp"
        android:textColor="#767676"
        android:background="@color/buttonColorSecondary"
        android:fontFamily="@font/montserrat"
        android:text="Guest"
        android:textAllCaps="false" />

